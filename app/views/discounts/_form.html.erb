<%= form_with model: model, method: method, url: url, class: 'merchant_discount_form', local: true do |f| %>
  <%= f.label :percentage_discount %>
  <%= f.number_field :percent_discount, in: 1..100, step: 0.5 %><br/><br/>
  <%= f.label :quantity_threshold %>
  <%= f.number_field :threshold %><br/><br/>
  <%= f.submit 'Submit'%>
<% end %>